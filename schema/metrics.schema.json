{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Metrics",
  "type": "object",
  "required": ["coverage", "drones", "per_drone"],
  "properties": {
    "coverage": {
      "type": "object",
      "required": ["percentage", "uncovered_cells"],
      "properties": {
        "percentage": {"type": "number", "minimum": 0, "maximum": 100},
        "uncovered_cells": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["x", "y"],
            "properties": {
              "x": {"type": "integer"},
              "y": {"type": "integer"}
            }
          }
        }
      },
      "additionalProperties": false
    },
    "drones": {
      "type": "object",
      "required": ["used", "max"],
      "properties": {
        "used": {"type": "integer", "minimum": 0},
        "max": {"type": "integer", "minimum": 0}
      },
      "additionalProperties": false
    },
    "makespan": {"type": "number", "minimum": 0},
    "total_time": {"type": "number", "minimum": 0},
    "per_drone": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["drone_id", "path_length", "turns", "recharges", "time"],
        "properties": {
          "drone_id": {"type": "integer"},
          "path_length": {"type": "number", "minimum": 0},
          "turns": {"type": "integer", "minimum": 0},
          "recharges": {"type": "integer", "minimum": 0},
          "time": {"type": "number", "minimum": 0}
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
